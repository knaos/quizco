generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Competition {
  id        String            @id @default(uuid()) @db.Uuid
  title     String            @db.VarChar(255)
  host_pin  String            @db.VarChar(50)
  status    CompetitionStatus @default(DRAFT)
  createdAt DateTime          @default(now()) @db.Timestamptz(6)

  rounds Round[]
  teams  Team[] // Added relation
}

model Round {
  id            String    @id @default(uuid()) @db.Uuid
  competitionId String    @db.Uuid
  orderIndex    Int
  type          RoundType
  title         String?   @db.VarChar(255)
  createdAt     DateTime  @default(now()) @db.Timestamptz(6)

  competition Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  questions   Question[]
  answers     Answer[]
}

model Question {
  id               String       @id @default(uuid()) @db.Uuid
  roundId          String       @db.Uuid
  questionText     String
  type             QuestionType
  points           Int          @default(10)
  timeLimitSeconds Int          @default(30)
  content          Json
  grading          GradingMode  @default(AUTO)
  section          String?
  createdAt        DateTime     @default(now()) @db.Timestamptz(6)

  round   Round    @relation(fields: [roundId], references: [id], onDelete: Cascade)
  answers Answer[]

  @@index([content], type: Gin)
}

model Team {
  id            String   @id @default(uuid()) @db.Uuid
  competitionId String   @db.Uuid // Linked to competition
  name          String   @db.VarChar(255)
  color         String?  @db.VarChar(50)
  streak        Int      @default(0)
  createdAt     DateTime @default(now()) @db.Timestamptz(6)

  competition Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  answers     Answer[]

  @@unique([competitionId, name]) // Name unique ONLY within one competition
}

model Answer {
  id               String   @id @default(uuid()) @db.Uuid
  teamId           String   @db.Uuid
  questionId       String   @db.Uuid
  roundId          String   @db.Uuid
  submittedContent Json
  isCorrect        Boolean?
  scoreAwarded     Int      @default(0)
  submittedAt      DateTime @default(now()) @db.Timestamptz(6)

  team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  round    Round    @relation(fields: [roundId], references: [id], onDelete: Cascade)

  @@unique([teamId, questionId]) // Prevents duplicate submissions
}

enum CompetitionStatus {
  DRAFT
  ACTIVE
  COMPLETED
}

enum GradingMode {
  AUTO
  MANUAL
}

enum QuestionType {
  CLOSED
  MULTIPLE_CHOICE
  OPEN_WORD
  CROSSWORD
  FILL_IN_THE_BLANKS
  MATCHING
  CHRONOLOGY
  TRUE_FALSE
  CORRECT_THE_ERROR
}

enum RoundType {
  STANDARD
  CROSSWORD
  SPEED_RUN
  STREAK
}
